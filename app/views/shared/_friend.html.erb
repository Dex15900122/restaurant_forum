<% if user != current_user  %>
  <% if current_user.all_friends?(user)%>
    <% if current_user.inverse_friends?(user)%>
      <%= link_to "好友", friendship_path(user), method: :delete , class: "btn btn-info"%>
    <% else%>
      <%= link_to "等待回覆", friendship_path(user), method: :delete %>
    <%end%>
  <% else %>
  <%= link_to "加好友", friendships_path(friend_id: user), method: :post, class: "btn btn-default"%>
  <% end %>
<% end %>

